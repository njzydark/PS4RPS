{
  // See https://go.microsoft.com/fwlink/?LinkId=733558 
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Desktp",
      "dependsOrder": "sequence",
      "dependsOn": [
        "All Dev",
        "Desktop Start"
      ],
      "problemMatcher": []
    },
    {
      "label": "All Dev",
      "dependsOn": [
        "Desktop Dev",
        "Web Dev"
      ],
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "pnpm exec turbo run dev --filter=desktop",
      "label": "Desktop Dev",
      "isBackground": true,
      "problemMatcher": [
        {
          "base": "$tsc-watch",
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "No errors found"
          }
        },
      ]
    },
    {
      "type": "shell",
      "command": "pnpm exec turbo run dev --filter=web",
      "label": "Web Dev",
      "isBackground": true,
      "problemMatcher": [
        {
          "base": "$tsc-watch",
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "No errors found"
          }
        },
        // {
        //   "base": "$tsc-watch",
        //   "background": {
        //     "activeOnStart": true,
        //     "beginsPattern": ".",
        //     "endsPattern": "Found 0 errors"
        //   }
        // },
      ]
    },
    {
      "type": "shell",
      "command": "pnpm run desktop:start",
      "label": "Desktop Start",
      "isBackground": true,
      "problemMatcher": [
        {
          "base": "$tsc-watch",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Debugger listening on",
            "endsPattern": "For help"
          }
        },
      ]
    }
  ]
}